// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}


model User {
  id       Int @id @default(autoincrement())
  name     String
  email    String
  orders   Item[]
}

model Item {
  title       String
  id          Int @id @default(autoincrement())
  image       String
  orderers    User[]
}